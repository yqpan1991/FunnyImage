<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="EsHeaderTitle">
        <item name="android:textSize">@dimen/text_size_45</item>
        <item name="android:textColor">@color/color_black_alpha_87</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="EsNormalImage">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="EsClassifyImage">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">1dp</item>
        <!--<item name="android:background">@color/color_black_alpha_10</item>-->
    </style>

    <style name="EsClassifyText">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_size_45</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>

    </style>
</resources>
